{
  "name": "ng-express-node",
  "version": "1.0.0",
  "description": "The Node server to run the server-side application",
  "main": "server.js",
  "scripts": {
    "watch-angular": "npm run build:watch --prefix app",
    "watch-node": "npm install && nodemon ./server.js localhost 3000",
    "start": "concurrently -n angular,node -c green.bold,cyan.bold npm:watch-angular npm:watch-node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Darnley/ng-express.git"
  },
  "keywords": [
    "expressjs",
    "node"
  ],
  "author": "Darnley Costa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Darnley/ng-express/issues"
  },
  "homepage": "https://github.com/Darnley/ng-express#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "helmet": "^3.18.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.1",
    "nodemon": "^1.19.1"
  }
}
